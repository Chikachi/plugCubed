{
    "manifest_version": 2,
    "author": "plug³ Team",
    "name": "plugCubed",
    "short_name": "plug³",
    "description": "Adding a new dimension to plug.dj",
    "homepage_url": "https://plugCubed.net",
    "version": "4.3.0.40",

    "icons": {
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    },

    "content_scripts": [{
        "matches": ["https://*.plug.dj/*"],
        "exclude_matches": [
            "https://*.plug.dj/",
            "https://*.plug.dj/@/*",
            "https://*.plug.dj/_/*",
            "https://*.plug.dj/about",
            "https://*.plug.dj/ba",
            "https://*.plug.dj/dashboard",
            "https://*.plug.dj/jobs",
            "https://*.plug.dj/logout",
            "https://*.plug.dj/partners",
            "https://*.plug.dj/plot",
            "https://*.plug.dj/press",
            "https://*.plug.dj/privacy",
            "https://*.plug.dj/purchase",
            "https://*.plug.dj/subscribe",
            "https://*.plug.dj/team",
            "https://*.plug.dj/terms"
        ],
        "js": ["loader.js"]
    }],

    "permissions": [
        "https://plug.dj/*"
    ],

    "web_accessible_resources": [
        "plugCubed.js"
    ]
}
